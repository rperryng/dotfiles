{
  "title": "Ctrl-n and Ctrl-p for down and up",
  "rules": [
    {
      "description": "Ctrl-n and Ctrl-p to navigate down and up in Telegram",
      "manipulators": [
        {
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "com.tdesktop.Telegram"
              ]
            }
          ],
          "from": {
            "key_code": "n",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "com.tdesktop.Telegram"
              ]
            }
          ],
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
