{
  // Base permissions and configuration for Claude Code
  "permissions": {
    "allow": [
      // skills
      "Skill(superpowers:*)",
      "Skill(draft-pr:*)",
      "Skill(reading-jira-tickets:*)",
      // read-only
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(less:*)",
      "Bash(ls:*)",
      "Bash(pwd:*)",
      "Bash(which:*)",
      "Bash(whereis:*)",
      "Bash(file:*)",
      "Bash(stat:*)",
      "Bash(tree:*)",
      // other file operations
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(pwd:*)",
      "Bash(cd:*)",
      "Bash(mkdir:*)",
      // search
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(find:*)",
      "Bash(fd:*)",
      // utils
      "Bash(jq:*)",
      "Bash(yq:*)",
      "Bash(echo:*)",
      // git and jj
      "Bash(git:*)",
      "Bash(jj:*)",
      // gh cli
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue view:*)",
      "Bash(gh run view:*)",
      // jira cli
      "Bash(acli jira workitem view:*)",
      "Bash(acli jira workitem comment list:*)",
      "Bash(acli jira workitem search:*)",
      "Bash(acli jira issue view:*)",
      // language tools
      "Bash(bundle:*)",
      "Bash(node:*)",
      "Bash(yarn:*)",
      "Bash(eslint:*)",
      "Bash(prettier:*)",
      "Bash(pnpm:*)",
    ],
    "deny": [
      "Bash(git commit:*)",
      "Read(.env*)",
      "Read(secrets/**)",
      "Read(~/.ssh/**)",
      "Read(~/.aws/**)",
    ],
    "ask": [
      "Bash(jj commit:*)",
      "Bash(yarn add:*)",
      "Bash(bundle add:*)",
      "Bash(gh pr create:*)",
    ],
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh",
    "padding": 0,
  },
  "hooks": {
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay ~/.claude/notification-sounds/notification.mp3",
          },
        ],
      },
    ],
  },
  "attribution": {
    "commit": "",
    "pr": "",
  },
}
