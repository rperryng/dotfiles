{
  // Base permissions and configuration for Claude Code
  "permissions": {
    "allow": [
      // skills
      "Skill(superpowers:*)",
      "Skill(draft-pr:*)",
      "Skill(reading-jira-tickets:*)",
      // reado nly
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(less:*)",
      "Bash(ls:*)",
      "Bash(pwd:*)",
      "Bash(which:*)",
      "Bash(whereis:*)",
      "Bash(file:*)",
      "Bash(stat:*)",
      "Bash(tree:*)",
      "--- OTHER FILE OPERATIONS ---",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(pwd:*)",
      "Bash(cd:*)",
      "Bash(mkdir:*)",
      "--- SEARCH OPERATIONS ---",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(find:*)",
      "Bash(fd:*)",
      "--- UTILITIES ---",
      "Bash(jq:*)",
      "Bash(echo:*)",
      "--- GIT ---",
      "Bash(git:*)",
      "Bash(jj:*)",
      "--- GITHUB CLI ---",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue view:*)",
      "Bash(gh run view:*)",
      "--- JIRA CLI ---",
      "Bash(jira workitem view:*)",
      "Bash(jira workitem comment list:*)",
      "Bash(jira workitem search:*)",
      "--- DEVELOPMENT ---",
      "Bash(bundle:*)",
      "Bash(node:*)",
      "Bash(yarn:*)",
      "Bash(eslint:*)",
      "Bash(prettier:*)",
      "Bash(pnpm:*)",
    ],
    "deny": [
      "Bash(git commit:*)",
      "Bash(jj commit:*)",
      "Read(.env*)",
      "Read(secrets/**)",
      "Read(~/.ssh/**)",
      "Read(~/.aws/**)",
    ],
    "ask": [
      "Bash(yarn add:*)",
      "Bash(bundle add:*)",
      "Bash(gh pr create:*)",
    ],
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh",
    "padding": 0,
  },
  "hooks": {
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay ~/.claude/notification-sounds/notification.mp3",
          },
        ],
      },
    ],
  },
  "attribution": {
    "commit": "",
    "pr": "",
  },
}
